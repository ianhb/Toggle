<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="@string/pref_screen_key"
        android:title="@string/pref_screen_title">
        <EditTextPreference
            android:defaultValue="@string/pref_timeout_def"
            android:inputType="numberDecimal"
            android:key="pref_timeout"
            android:summary="@string/pref_timeout_desc"
            android:title="@string/pref_timeout" />
        <EditTextPreference
            android:inputType="text"
            android:key="pref_name"
            android:summary="@string/pref_name_desc"
            android:title="@string/pref_name" />

    </PreferenceCategory>

</PreferenceScreen>