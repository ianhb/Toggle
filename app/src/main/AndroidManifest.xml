<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.eighttenlabs.toggle">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/toggle_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ServerSelectActivity"
            android:label="@string/app_name">
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ControllerActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysVisible" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_search_settings"
            android:parentActivityName=".ServerSelectActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.eighttenlabs.toggle.ServerSelectActivity" />
        </activity>
    </application>

</manifest>
